<div class="container text-center">
  <div class="row mt-5 ml-3">
     <h4 class="my-5 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">会員一覧</span>
    </h4>
  </div>

  <div class="col-md-10 mx-auto mt-3">
    <table class = "table table-hover">
      <thead class="table-active">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customer.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer) do %><%= customer.first_name %> <%= customer.last_name %><% end %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == false %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会</span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customer %>
  </div>
</div>