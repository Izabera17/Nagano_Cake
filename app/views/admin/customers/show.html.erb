<div class="container-fluid">
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-4">
      <h4 class="my-5 text-md-end text-left" >
        <span class="text-white bg-secondary px-4">
          <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
        </span>
      </h4>
    </div>
    <div class="col-md-1">
    </div>
     <div class="col-md-1">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">会員ID</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.id %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">氏名</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.first_name %>　<%= @customer.last_name %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">フリガナ</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.first_name_kana %>　<%= @customer.last_name_kana %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">郵便番号</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.postal_code %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">住所</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.address %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">電話番号</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.telephone_number %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">メールアドレス</label>
    </div>
    <div class="col-md-2 ">
      <%= @customer.email %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
      <label class="mt-2">会員ステータス</label>
    </div>
    <div class="col-md-2 ">
      <% if @customer.is_deleted == false %>
        <span class="text-success">有効</span>
      <% else %>
        <span class="text-secondary">退会</span>
      <% end %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
      
  <div class="row d-flex justify-content-center mb-2">
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
    </div>
    <div class="col-md-2">
      <%= link_to "注文履歴一覧を見る", admin_path, class:"btn btn-primary" %>
    </div>
  </div>
  
</div>



