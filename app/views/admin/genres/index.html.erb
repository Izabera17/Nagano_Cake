<div class="row">
  <div class="col-md-3">
    <%= form_with url: admin_genres_path, model: @genre, local: true do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <br>
      <%= f.text_field :name, class:'form-control' %>
      <br>
      <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
  <div class="col-md-9">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn-sm btn-primary' %></td>
            <td><%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  