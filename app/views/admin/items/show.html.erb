<div class="container-fluid">
  <div class="row justify-content-center mb-5">
    <div class="col-3">
      <h4 class="my-4 text-md-end text-center">
        <span class="text-white bg-secondary px-4">商品詳細</span>
      </h4>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-3 p-0">
      <div class="col-md-12 p-0 ">
        <% if @items.image.attached? %>
          <%= image_tag @items.image, size: '300x200' %>
        <% else %>
          <%= image_tag 'no_image.jpg' %>
        <% end %> 
      </div>
    </div>
    <div class="col-2 p-0">
      <div class="col-md-12 mb-4 mt-2 p-0 ">商品名</div>
      <div class="col-md-12 mb-4 p-0">商品説明</div>
      <div class="col-md-12 mb-4 p-0">ジャンル</div>
      <div class="col-md-12 mb-4 p-0">税抜価格<br>(税込価格)</div>
      <div class="col-md-12 m-0 p-0">販売ステータス</div>
    </div>
    <div class="col-3 p-0"> 
      <div class="col-md-12 mb-4 mt-2 p-0">
        <h5><%= @items.name %></h5>
      </div>
      <div class="col-md-12 mb-4 p-0">
        <h5><%= @items.introduction %></h5>
      </div>
      <div class="col-md-12 mb-4 p-0">
        <h5><%= @items.genre.name %></h5>
      </div>
      <div class="col-md-12 mb-5 p-0">
        <h5><%= @items.price.to_s(:delimited) %>（<%= ((@items.price * 1.1).floor).to_s(:delimited) %>）円</h5>
      </div>
      <div class="col-md-12 mb-4 p-0">
        <% if @items.is_active == true %>
          <h5>
            <strong class="text-success ">
              販売中
            </strong>
          </h5>
        <% else %>
          <h5>
            <strong class="text-secondary">
              販売停止中
            </strong>  
          </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="mx-auto mt-4">
  <%= link_to "編集する", edit_admin_item_path(@items), class: 'btn-lg btn-success btn-block px-5' %>    
</div>