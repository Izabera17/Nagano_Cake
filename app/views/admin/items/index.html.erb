
<div class="mx-auto" style="width: 60%;">
  <div class="row justify-content-between">
    <h4 class="m-4 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">管理者側：商品一覧</span>
    </h4>
    <div class="m-4">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-2x"></i>
      <% end %>  
    </div>
  </div>
  
  <table class="table text-center">
    <thead class="bg-light">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id_i18n %></td>
          <td>
            <% if item.is_active == true %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-secondary">販売停止中</span>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="text-center">
  <%= paginate @items, class: "text-center" %>  
</div>



