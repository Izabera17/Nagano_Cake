<div class="container-fluid">
  <div class="row mb-4 justify-content-center">
    <h4 class="my-5 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">商品新規登録</span>
    </h4>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <%= form_with url: admin_items_path, model: @items, local:true do |f| %>
    <div class="row mb-4 justify-content-center">
      <%= f.label :image, "商品画像", class: "col-md-2 col-form-labal text-md-start" %>
      <%= f.file_field :image, accept: "image/*", class: 'col-md-4 text-md-start p-0' %>
      <div class="col-md-1">
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :name, "商品名", class: "col-md-2 col-form-labal text-md-start" %>
      <%= f.text_field :name, placeholder: "商品名", class: 'col-md-4'  %>
      <div class="col-md-1">
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :introduction, "商品説明", class: "col-md-2 col-form-labal text-md-start" %>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", rows: 8, class: 'col-md-4' %>
      <div class="col-md-1">
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :genre_id, "ジャンル", class: "col-md-2 col-form-labal text-md-start" %>
      <%= f.select :genre_id, Item.genre_ids.keys.map {|k| [I18n.t("enums.item.genre_id.#{k}"), k]} , {prompt: "選択してください"}, class: 'col-md-4'%>
      <div class="col-md-1">
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :price, "税抜価格", class: "col-md-2 col-form-labal text-md-start" %>
      <%= f.text_field :price, placeholder: "1000", class: 'col-md-4' %> 
      <div class="d-flex align-items-center col-md-1">
      円
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :is_active, "販売ステータス", class: "col-md-2 col-form-labal text-md-start" %>
      <div class="col-md-4 p-0">
        <%= f.radio_button :is_active, "true", checked: true %> 販売中
        <%= f.radio_button :is_active, "false", class: 'ml-5' %> 販売停止中
       </div>
       <div class="col-md-1">
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit '新規登録', class: 'btn-lg btn-success border-0' %>
    </div>
  <% end %>
</div>







