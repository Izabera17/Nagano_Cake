<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文履歴詳細</h2>

      <table>
       <tr>
        <th>購入者</th>
        <td><%= @order.name %></td>

      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td>
          <% if @order.payment_method == "credit_card" %>
            <%= Order.payment_methods_i18n[:credit_card] %>
          <% elsif @order.payment_method == "transfer" %>
            <%= Order.payment_methods_i18n[:transfer] %>
          <% end %>
        </td>
      </tr>
      <tr>

        <th>注文ステータス</th>
        <td>
          <%= form_for @order, url: admin_order_path do |f| %>
          　<%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]}, style: "margin-top:10px;" %>
          <%= f.submit "更新" ,class: "btn btn-primary btn-sm" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <div class=" col-md-9">
      <table class="table ">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
        <%  @order_detail.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.purchase_amount %></td>
          <td><%= order_detail.amount %></td>
          <td><%= ((order_detail.purchase_amount)*(order_detail.amount)) %> </td>

          <%= form_for order_detail,url: admin_order_detail_path(order_detail) do |f| %>
          <td>
            <%= f.select :crafting_status, OrderDetail.crafting_statuses.keys.map {|k| [I18n.t("enums.order_detail.crafting_status.#{k}"), k]}, style: "margin-top:10px;" %>
          </td>
          
          <td><%= f.submit "更新" ,class:"btn btn-primary btn" %></td>
          <% end %>
        </tr>
          <% end %>
      </table>
    </div>

    <div>
     <h4>商品合計     <%= @order.billing_amount %>円</h4>
     <h4>送料　　　    <%= @order.postage %>円</h4>
     <h4>請求金額合計　<%= (@order.billing_amount + @order.postage) %>円</h4>
    </div>
  </div>

</div>