<div class="container mx-auto mt-5">
  <div class="row">
    <div class="col-md-3">
    </div>
  </div>
  <div class="row">
    <%= render "public/shared/sidebar", genres: @genres %>
    
    <div class="col-md-5 text-center">
  	  <% if @items.image.attached? %>
        <%= image_tag @items.image, size: '300x300' %>
      <% else %>
        <%= image_tag 'no_image.png', size: '300x300' %>
      <% end %>
    </div>
    <div class="col-md-4">
    <%= form_with model: @cart_item, url: cart_items_path(@cart_item) do |f| %>
      <div class="mb-4 p-0"><h2><strong><%= @items.name %></strong></h2></div>
      <div class="mb-3 p-0"><h2><%= @items.introduction %></h2></div>
      <div class="mb-3 p-0 mt-5">
        <h4>
          <strong>￥<%= ((@items.price * 1.1).floor).to_s(:delimited) %>(税込)</strong>
        </h4>
      </div>
      <div class="row">
        <div class="col-md-3 mt-1">
          
          <%= f.hidden_field :item_id  , :value => @items.id%>
          <%= f.select :amount, *[1..20], { include_blank: '個数選択'}, class: "mt-2" %>  
        </div>
        <div class="col-md-5">
          <%= f.submit 'カートに入れる', class: 'btn btn-success  px-3 ml-2 mt-1'%>
        </div>
      </div>
    <% end %>
    </div>
</div>
