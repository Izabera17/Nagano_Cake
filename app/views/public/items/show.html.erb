<div class="container-fluid">
  <div class="row justify-content-center mb-5">
    <div class="col-3">
      <h4 class="my-4 text-md-end text-center">
        <span class="text-white bg-secondary px-4">商品詳細</span>
      </h4>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-3 p-0">
      <div class="col-md-12 p-0 ">
        <%= image_tag @items.get_image(250, 250) %>
      </div>
    </div>
    <div class="col-9 p-0">
      <div class="col-md-2 mb-4 mt-2 p-0"><%= @items.name %></div>
      <div class="col-md-2 mb-3 p-0"><%= @items.introduction %></div>
      <div class="col-md-2 mb-3 p-0">￥<%= ((@items.price * 1.1).floor).to_s(:delimited) %>(税込)</div>
      <div class="row col-md-2">
        <div class="col-md-2">
          <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
            <%= f.hidden_field :item_id  , :value => @items.id%>
            <%= f.select :amount, *[1..5] %>
            <div class="col-md-5">
               <%= f.submit 'カートに入れる', class: 'btn btn-success btn-block px-5'%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>