<div class="container">
   <div class="row">
     <%= render "public/shared/sidebar", genres: @genres %>
   </div>
   
   <div class="row col-md-10 ">
        <%= image_tag @items.get_image(300, 300) %>
    <div class="col-md-4 p-0">
      <div class="mb-4 mt-2 p-0"><h2><strong><%= @items.name %></strong></h2></div>
      <div class="mb-3 p-0"><h2><%= @items.introduction %></h2></div>
      <div class="mb-3 p-0">
        <h4>
          <strong>￥<%= ((@items.price * 1.1).floor).to_s(:delimited) %>(税込)</strong>
        </h4>
      </div>
    </div>
  </div>
  <div class="row">
    <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
    <%= f.hidden_field :item_id  , :value => @items.id%>
    <div class="col-md-6">
      <%= f.select :amount, *[1..5] %>
    </div>
    <div class="col-md-6">
      <%= f.submit 'カートに入れる', class: 'btn btn-success btn-block px-5'%>
    </div>
    <% end %>
  </div>
</div>
