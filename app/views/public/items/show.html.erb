<div class="container mx-auto mt-5">
  <div class="row">
    <div class="col-md-3">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody class="table-borderless">
          <% @genres.each do |genre| %>
            <td>
              <%= link_to genre.name, items_path(genre_id: genre.id) %>
            </td>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-5">
  	  <% if @items.image.attached? %>
        <%= image_tag @items.image, size: '300x300' %>
      <% else %>
        <%= image_tag 'no_image.jpg' %>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="mb-4 mt-5 p-0"><h2><strong><%= @items.name %></strong></h2></div>
      <div class="mb-3 p-0"><h2><%= @items.introduction %></h2></div>
      <div class="mb-3 p-0 mt-5">
        <h4>
          <strong>￥<%= ((@items.price * 1.1).floor).to_s(:delimited) %>(税込)</strong>
        </h4>
      </div>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-6 text-right"></div>
    <div class="col-md-3 text-right">
      <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
        <%= f.hidden_field :item_id  , :value => @items.id%>
        <%= f.select :amount, *[1..20], { include_blank: '個数選択'}, class: "mt-2" %> 
    </div>
    <div class="col-md-3">
        <%= f.submit 'カートに入れる', class: 'btn btn-success btn-block px-5'%>
      <% end %>
    </div>
  </div>
</div>
