<div class="container">
  <div class="row">

  	<%= render "public/shared/sidebar", genres: @genres %>
  
    <div class="col-md-1">
    </div>
    
  	<div class="col-md-9">
  	  <h2>商品一覧（全<%= @quantity %>件）</h2><br>
  	    <div class="row">
  	      <% @items.each do |item| %>
            <div class="box">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(170, 170) %>  

            <% end %>
              <p><%= item.name %></p>
              <p>¥<%= (item.price*1.1).floor %></p> 
            </div>
          <% end %>
  	    </div>
        <div class="col-md-6 col-xs-offset-4 ">
          <%= paginate @items %>
        </div> 
  	</div>
  </div>
</div>