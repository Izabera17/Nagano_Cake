<div class="col-md-3">
    <table class="table table-hover table-borderless">
      <thead class="table-bordered border-dark" >
        <tr>
          <th class="text-center">
            <h5><strong>ジャンル検索</strong></h5>
          </th>
        </tr>
      </thead>
      <tbody class="table-bordered border-dark">
        <% genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, search_items_path(genre.id), method: :get %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>