<div class="container-fluid">
  <div class="row mt-3 mb-4 justify-content-center">
    <h4 class="my-4 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">配送先編集</span>
    </h4>
    <div class="col-md-5">
    </div>
  </div>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch, local:true do |f| %>
    <div class="row mb-4 justify-content-center">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-md-2 p-0 text-center' %>
      <%= f.text_field :postal_code, placeholder: "0000000", class: 'col-md-3'  %>
      <div class="col-md-2">
      </div>
    </div>
    <div class="row mb-4 justify-content-center">
      <%= f.label :address, "住所", class: "col-md-2 p-0 text-center" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'col-md-3' %>
      <div class="col-md-2">
      </div>
    </div>
    <div class="row mb-5 justify-content-center">
      <%= f.label :name, "宛名", class: "col-md-2 p-0 text-center" %>
      <%= f.text_field :name, placeholder: "令和道子", rows: 8, class: 'col-md-3' %>
      <div class="col-md-2 text-center">
        <%= f.submit '変更内容を保存', class: 'btn btn-success border-0' %>
      </div>
    </div>
  <% end %>
</div>
