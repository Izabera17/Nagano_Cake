<div class="container-fluid">
  <div class="row mb-1 justify-content-center">
    <h4 class="my-5 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">新規会員登録</span>
    </h4>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <label>お名前</label>
          </div>
          <div class="col-md-1 py-1">
            <%= f.label :first_name, "(姓)" %>
          </div>
          <div class="col-md-2 "> 
            <%= f.text_field :first_name, autofocus: true, class: "form-control", :placeholder => "令和" %>
          </div>
          <div class="col-md-1 py-1">
            <%= f.label :last_name, "(名)" %>  
          </div>
          <div class="col-md-2">
            <%= f.text_field :last_name, autofocus: true, class: "form-control", :placeholder => "道子" %>  
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <label>フリガナ</label>
          </div>
          <div class="col-md-1 py-1">
            <%= f.label :first_name_kana, "(セイ)" %>
          </div>
          <div class="col-md-2 "> 
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control", :placeholder => "レイワ" %>
          </div>
          <div class="col-md-1 py-1">
            <%= f.label :last_name_kana, "(メイ)" %>  
          </div>
          <div class="col-md-2">
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", :placeholder => "ミチコ" %>  
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2 "> 
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :placeholder => "sample@example.com" %>  
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2">
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2 "> 
            <%= f.text_field :postal_code, class: 'form-control', :placeholder => "0000000" %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2">
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :address, "住所" %><br>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-5 "> 
            <%= f.text_field :address, class: 'form-control', :placeholder => "東京都渋谷区代々木神園町0-0" %>
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2 "> 
            <%= f.text_field :telephone_number, class: 'form-control', :placeholder => "00000000000" %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2">
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :password, "パスワード(6文字以上)" %><br>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2 "> 
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2">
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-5">
          <div class="col-md-2">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2 "> 
            <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'form-control' %>
          </div>
          <div class="col-md-1 py-1">
          </div>
          <div class="col-md-2">
          </div>
      </div>
      
      <div class="actions d-flex justify-content-center">
        <%= f.submit '新規登録', class: 'btn-lg btn-success border-0' %>
      </div>
      
  <% end %>
  <div class="row mb-1 justify-content-center">
    <h4 class="my-5 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">既に登録済の方</span>
      <p style="font-size:15px;" class="text-md-end text-center ml-5 mt-3 ">
        <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
      </p>
    </h4>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>