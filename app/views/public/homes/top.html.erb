


  <div class="container">
  <div class="row">
    <div class="col-md-3">
      <p></p>
      <%= form_tag(items_path,:method => 'get' ) do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
      <p></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
                <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
                <!-- 上のリンクpath以降は省略形、フルだと_path(:genre_id => genre.id) -->
                <!-- コントローラーのparamsから[:genre_id]を受け取ってurlの後ろにジャンルIDをつけて飛ばせる -->
                <!-- products/top?genre_id=1 -->
        </tbody>
        <!-- 何故か/tbodyの↓にエンドを置かないと崩れる -->
            <% end %>
      </table>
    </div>
    <div class="col-md-9">
        <div class="flex_test-box">
　　　　 <!--カート送信ボタンのコード -->
        <% @items.each do |item| %>
            <div class="flex_test-item">
              <%= link_to items_path(item) do %>

              <% if item.image.attached? %>
                <%= image_tag item.image, size: '200x200' %>
              <% else %>
                <%= image_tag 'no_image.jpg' %>
              <% end %>


             <% end %>
            </div>
        <% end %>
        </div>
    </div>
  </div>
</div>