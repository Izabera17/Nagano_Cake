<div class="container">
  <div class="row mt-3 mb-4 justify-content-center">
    <h4 class="my-4 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">マイページ</span>
    </h4>
    <div class="col-md-5">
    </div>
  </div>
  <div class="row py-3">
    <div class=" col-md-2">
      <h4><strong>登録情報</strong></h4>
    </div>
    <div>
      <%= link_to "編集する", customers_information_edit_path, class: 'btn btn-success btn-block px-5' %>
    </div>
  </div>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td class="table-active">氏名</td>
        <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
      </tr>
       <tr>
        <td class="table-active">カナ</td>
        <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
      </tr>
       <tr>
        <td class="table-active">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
       <tr>
        <td class="table-active">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="table-active">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="table-active">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>  
  </table>
  <div class="row py-3">
    <div class=" col-md-2">
      <h4><strong>配送先</strong></h4>
    </div>
    <div>
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary btn-block px-5' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <h4><strong>注文履歴</strong></h4>
    </div>
    <div>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary btn-block px-5' %>
    </div>
  </div>
</div>
