<div class="container-fluid">
  
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row mb-1 justify-content-center">
    <h4 class="my-5 text-md-end text-left" >
      <span class="text-white bg-secondary px-4">会員情報編集</span>
    </h4>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <%= form_with model: @customer, url: customers_information_path, method: :patch, local:true do |f| %>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <label class="mt-2">名前</label>
          </div>
          <div class="col-md-2 ">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-2">
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <label class="mt-2">フリガナ</label>
          </div>
          <div class="col-md-2 ">
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-2">
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :postal_code, "郵便番号" , class: "mt-2" %><br>
          </div>
          <div class="col-md-2 ">
            <%= f.text_field :postal_code, class: 'form-control' %>
          </div>
           <div class="col-md-2">
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :address, "住所", class: "mt-2" %><br>
          </div>
          <div class="col-md-4 ">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
      </div>
      <div class="row d-flex justify-content-center mb-2">
          <div class="col-md-2">
            <%= f.label :telephone_number, "電話番号", class: "mt-2" %><br>
          </div>
          <div class="col-md-2 ">
            <%= f.text_field :telephone_number, class: 'form-control' %>
          </div>
           <div class="col-md-2">
          </div>
      </div>
       <div class="row d-flex justify-content-center mb-5">
          <div class="col-md-2">
            <%= f.label :email, "メールアドレス", class: "mt-2" %>
          </div>
          <div class="col-md-2 ">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-md-2">
          </div>
      </div>

      <div class="row d-flex justify-content-center mb-2">
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
           <%= f.submit '編集内容を保存', class: 'btn btn-success border-0' %>
        </div>
        <div class="col-md-2">
          <%= link_to "退会する", customers_confirmation_path ,class: "btn btn-primary " %>
        </div>
      </div>

    <% end %>

</div>