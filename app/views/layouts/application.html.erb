<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <a class="navbar-brand my-auto" href="#">LOGO</a>
       
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav mr-auto">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark'  %>
              </li>
            <% elsif admin_signed_in? %>  
               <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark'  %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧",  admin_customers_path, class: 'nav-link text-dark'  %>
              </li>
              <li class="nav-item">
                <%= link_to "注文履歴一覧", admin_path, class: 'nav-link text-dark'  %>
              </li>
               <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark'  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class: 'nav-link text-dark'  %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "About", about_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'nav-link text-dark'  %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark'  %>
              </li>
               <li class="nav-item">
                <%= link_to "ログイン", new_admin_session_path, class: 'nav-link text-dark'  %>
              </li>
            <% end %>
          </ul>
            <form class="d-flex flex-row-reverse ml-auto mb-2 form-inline">
              <input class="form-control ml-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
